<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.PassCode2"
        tools:targetApi="31">
        <activity
            android:name=".ui.other.RecyclerBin"
            android:exported="false" />
        <activity
            android:name=".ui.other.Other"
            android:exported="false" />
        <activity
            android:name=".ui.home.Home"
            android:exported="false" />
        <activity
            android:name=".ui.reg_and_login.password.Password"
            android:exported="false" />
        <activity
            android:name=".ui.reg_and_login.RegistrationAndLogin"
            android:exported="false" />
        <activity
            android:name=".ui.onboard.Onboard"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>