<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/white"
    tools:context=".ui.home.settings.Premium">


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="50dp"
        android:background="@drawable/round_boarder"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/app_logo_png"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="PassCode\nPremium version"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:text="1 user account"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/check_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:text="Cross-Device Syncing"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/check_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:text="Unlimited Password Storage"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/check_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:text="Advanced Security Features"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/check_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:text="Priority Customer Support"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/check_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:text="Custom Categories and Tags"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/check_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:text="Password Health Check"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/check_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:text="Secure Cloud Backup"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/check_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:text="Ad-Free Experience"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/check_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:text="Exclusive Features and Integrations"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/check_ic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="â‚¹49/- Month"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_margin="20dp"
            android:backgroundTint="#1A7400"
            android:fontFamily="@font/poppins"
            android:text="Buy Now"
            android:textSize="18sp"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edLastName" />

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Later"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>