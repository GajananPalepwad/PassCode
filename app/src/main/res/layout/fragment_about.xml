<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.other.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/app_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins"
            android:text="@string/frictionless_security"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:fontFamily="@font/poppins"
            android:text="Welcome to PassCode, your trusted password manager!"
            android:textColor="#707070"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="@string/our_mission"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="At PassCode, our mission is to simplify your digital life and enhance your online security. We believe that managing your passwords should be effortless and secure, and we are committed to providing you with the best tools to achieve this."
            android:textColor="#707070"
            android:layout_marginBottom="15dp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="@string/about_the_app"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="PassCode is a user-friendly password manager designed to keep your digital life organized and your sensitive information safe. We understand the importance of strong, unique passwords for every online account, and our app makes it easy to generate, store, and auto-fill your credentials securely."
            android:textColor="#707070"
            android:layout_marginBottom="15dp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="@string/key_features"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="● Secure password storage\n● Password generator for strong, unique passwords\n● Biometric authentication (fingerprint/face recognition)\n● Organize and categorize your accounts\n● Two-factor authentication (2FA) support\n● Secure notes for storing sensitive information\n● Cross-device synchronization\n● User-friendly interface"
            android:textColor="#707070"
            android:layout_marginBottom="15dp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="@string/meet_the_team"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="We're a passionate team of developers, security experts, and designers dedicated to ensuring your online security. With years of experience in the field, we've designed PassCode to meet the highest standards of security and usability."
            android:textColor="#707070"
            android:layout_marginBottom="15dp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="@string/contact_us"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Your feedback is valuable to us. If you have any questions, suggestions, or need assistance, please don't hesitate to reach out to us at [gajananpalepwad@gmail.com]. We are always here to help."
            android:textColor="#707070"
            android:layout_marginBottom="15dp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="@string/privacy_and_security"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Your security and privacy are our top priorities. PassCode uses state-of-the-art encryption and security practices to protect your data. For more information, please review our Privacy Policy and Security Measures."
            android:textColor="#707070"
            android:layout_marginBottom="15dp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:text="@string/join_us_on_social_media"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Stay updated with the latest news, tips, and updates. Follow us on"
            android:textColor="#707070"
            android:layout_marginBottom="15dp"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/LinkedIn"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingHorizontal="9dp"
            android:text="LinkedIn"
            android:textColor="#105DFA"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/GitHub"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingHorizontal="9dp"
            android:text="GitHub"
            android:textColor="#105DFA"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Instagram"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:fontFamily="@font/poppins"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingHorizontal="9dp"
            android:text="Instagram"
            android:layout_marginBottom="15dp"
            android:textColor="#105DFA"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Thank you for choosing PassCode to secure your digital life. We look forward to being your trusted partner in online security."
            android:textColor="#707070"
            android:layout_marginBottom="15dp"
            android:textSize="17sp" />

    </LinearLayout>

</ScrollView>