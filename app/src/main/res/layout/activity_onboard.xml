<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.onboard.Onboard">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:autoStart="true"
        android:flipInterval="2000"
        app:layout_constraintBottom_toTopOf="@+id/btnRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="9dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/black"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="9dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:foreground="@drawable/round_boarder"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/black"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="9dp"
                    android:layout_weight="1"
                    android:foreground="@drawable/round_boarder"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/black"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="40dp"
                android:src="@drawable/security_symbol"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:text="@string/security"
                android:textSize="18sp" />

            <View
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_marginTop="-6dp"
                android:layout_marginStart="20dp"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/control_your_security"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/poppins"
                android:text="@string/this_application_is_build_on_blockchain_so_that_you_can_get_100_security_across_websites_amp_applications_with_single_app" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="9dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/black"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="9dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/black"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="9dp"
                    android:layout_weight="1"
                    android:foreground="@drawable/round_boarder"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/black"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginVertical="40dp"
                android:src="@drawable/fast_symbol"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:text="@string/fast"
                android:textSize="18sp" />

            <View
                android:layout_width="35dp"
                android:layout_height="2dp"
                android:layout_marginTop="-6dp"
                android:layout_marginStart="20dp"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/everything_in_single_click"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/poppins"
                android:text="@string/add_genreate_store_transfer_sync_export_amp_copy_all_your_passwords_in_single_click_use_autofill_for_quick_action_without_opening_app" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="9dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/black"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="9dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/black"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="9dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/black"/>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/app_logo_png"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textSize="45sp"
                android:text="@string/app_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:text="@string/frictionless_security"
                android:textSize="25sp" />


        </LinearLayout>


    </ViewFlipper>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:text="@string/register"
        android:backgroundTint="@color/black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:textAllCaps="false"
        android:background="@drawable/round_boarder"
        android:text="@string/already_have_an_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>